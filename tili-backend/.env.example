# ===================================
# CONFIGURATION DE LA BASE DE DONNÉES
# ===================================

# Hôte du serveur MySQL
DB_HOST=localhost

# Port MySQL (par défaut: 3306)
DB_PORT=3306

# Nom d'utilisateur MySQL
DB_USER=root

# Mot de passe MySQL (laisser vide si pas de mot de passe en local)
DB_PASSWORD=

# Nom de la base de données
DB_NAME=tili_db

# ===================================
# CONFIGURATION DU SERVEUR
# ===================================

# Port sur lequel le serveur Express écoute
PORT=5000

# Environnement: development | production
NODE_ENV=development

# ===================================
# CONFIGURATION JWT
# ===================================

# Secret pour signer les tokens JWT (CHANGER EN PRODUCTION!)
# Générer un secret fort: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=votre_secret_jwt_super_securise_changez_moi_en_production_123456789

# Durée de validité du token (exemples: 1h, 7d, 30d)
JWT_EXPIRE=7d

# ===================================
# CONFIGURATION DES UPLOADS
# ===================================

# Dossier de stockage des fichiers uploadés
UPLOAD_DIR=./uploads

# Taille maximale des fichiers en bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# ===================================
# CONFIGURATION CORS
# ===================================

# Origine autorisée pour les requêtes CORS (URL du frontend)
# En développement: http://localhost:5173
# En production: https://votre-domaine.com
CORS_ORIGIN=http://localhost:5173
